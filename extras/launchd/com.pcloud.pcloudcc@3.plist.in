<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>com.pcloud.pcloudcc@3</string>
        <key>ProgramArguments</key>
        <array>
            <string>@CMAKE_INSTALL_PREFIX@/bin/pcloudcc</string>
            <string>--username</string>
            <string>$PCLOUD_USER_NAME</string>
            <string>--mountpoint</string>
            <string>$HOME/pCloud Drive</string>
        </array>
        <key>RunAtLoad</key>
        <true/>
        <key>KeepAlive</key>
        <true/>
        <key>StandardOutPath</key>
        <string>@PCLOUD_MAINTAINER_LOG_FILE@</string>
        <key>StandardErrorPath</key>
        <string>@PCLOUD_MAINTAINER_LOG_FILE@</string>
        <key>Debug</key>
        <true/>
        <key>SoftResourceLimits</key>
        <dict>
            <key>Core</key>
            <integer>9223372036854775807</integer>
        </dict>
        <key>HardResourceLimits</key>
        <dict>
            <key>Core</key>
            <integer>9223372036854775807</integer>
        </dict>
    </dict>
</plist>
